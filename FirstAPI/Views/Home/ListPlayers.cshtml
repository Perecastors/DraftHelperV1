@model IEnumerable<FirstAPI.DbContext.Player>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nickname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nickname)
        </td>
        <td>
            @Html.Raw(Enum.GetName(typeof(FirstAPI.Models.roleList), item.Role))
        </td>
        <td>
            @Html.ActionLink("My Matchups", "SearchMatchup", "Matchup", new { playerId = item.PlayerId }, null) |
            @Html.ActionLink("Edit Champion Pool", "ChampionPool", "ChampionPool", new { playerid = item.PlayerId }, null)
        </td>
    </tr>
}

</table>
