@model FirstAPI.DbContext.Tag

@using (Html.BeginForm("AddTag", "Tag", new { playerId = ViewBag.PlayerId }, FormMethod.Post, new { @id = "AddTagForm" }))
{

    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <label>Enter a new Tag name</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            @Html.EditorFor(model => model.TagName, new { htmlAttributes = new { @class = "form-control",@placeholder ="e.g : 'Ad champions' , 'Tanks', 'Long Range' ",@style="max-width:400px" } })
        </div>
        <div class="col-md-2">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
}

