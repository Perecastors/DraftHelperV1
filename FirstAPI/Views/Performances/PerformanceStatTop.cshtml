@model FirstAPI.Models.PerformancesViewModel

<strong>Victory</strong> : @Model.nbVictory &nbsp;&nbsp;&nbsp;&nbsp; <strong>Defeat :</strong> @Model.nbDefeat

<table id="tablePerf" style="margin-top:5px;margin-bottom:5px;">
    <thead>
        <tr>
            <th>Date</th>
            <th>K / D / A</th>
            <th> Cs diff 5min</th>
            <th> Cs diff 10min</th>
            <th> Cs diff 15min</th>
            <th> Xp(lvl) Diff 5min</th>
            <th> Xp(lvl) Diff 10min</th>
            <th> Xp(lvl) Diff 15min</th>
            <th> Opponent </th>
            @*<th> GameId </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var timeline in Model.timelines)
        {
            <tr class="@(timeline.win ? "victory":"defeat") timeline">
                <td>@(GlobalVar.ConvertTimestampToDatetime(timeline.timestamp))</td>
                <td>@timeline.kills / @timeline.deaths / @timeline.assists</td>
                <td>@(String.Format("{0:0.##}",timeline.csDiffPerMinDeltas.fiveMin))</td>
                <td>@(String.Format("{0:0.##}",timeline.csDiffPerMinDeltas.tenMin))</td>
                <td>@(String.Format("{0:0.##}", timeline.csDiffPerMinDeltas.fifteenMin))</td>
                <td>@(String.Format("{0:0.##}", timeline.xpDiffPerMinDeltas.fiveMin.Item1))(@(timeline.xpDiffPerMinDeltas.fiveMin.Item2)) </td>
                <td>@(String.Format("{0:0.##}", timeline.xpDiffPerMinDeltas.tenMin.Item1))(@(timeline.xpDiffPerMinDeltas.tenMin.Item2)) </td>
                <td>@(String.Format("{0:0.##}", timeline.xpDiffPerMinDeltas.fifteenMin.Item1))(@(timeline.xpDiffPerMinDeltas.fifteenMin.Item2)) </td>
                <td>@timeline.opponentName</td>
                <td style="display:none">game id : @timeline.gameId</td>
            </tr>
        }
    </tbody>
</table>

<style>
    #tablePerf > thead > tr > th {
        padding-left: 5px;
        padding-right: 5px;
    }

    #tablePerf > td {
        border: solid 1px #000;
    }

    .victory {
        background-color: #d5ff80;
    }

    .defeat {
        background-color: #ffae9d;
    }

    .timeline > td{
        padding:3px 10px;
        width:133px;
    }

</style>