@using (Html.BeginForm("Login","Login", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "text-center" } ))
{
    @Html.AntiForgeryToken()
    <br/>
    <form class="login">
        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "login-input", @placeholder="Username" } })<br/>
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "login-input", @placeholder = "Password" ,@type="password" } })<br/>
        <input type="submit" value="Connect" class="login-button">
    </form>
}
